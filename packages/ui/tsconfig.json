{
  "extends": "@renovabit/tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@renovabit/ui/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "postcss.config.ts", "tailwind.config.ts"],
  "exclude": ["node_modules", "dist"]
}
