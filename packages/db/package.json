{
	"name": "@renovabit/db",
	"version": "0.0.0",
	"private": true,
	"main": "./index.ts",
	"module": "./index.ts",
	"types": "./index.ts",
	"exports": {
		".": "./index.ts",
		"./schema": "./src/schema/index.ts"
	},
	"scripts": {
		"lint": "biome check --write",
		"db:generate": "drizzle-kit generate",

		"db:migrate": "dotenv -e .env -- drizzle-kit migrate",
		"db:push": "dotenv -e .env -- drizzle-kit push",
		"db:studio": "dotenv -e .env -- drizzle-kit studio",

		"db:dev:migrate": "dotenv -e .env.local -- drizzle-kit migrate",
		"db:dev:push": "dotenv -e .env.local -- drizzle-kit push",
		"db:dev:studio": "dotenv -e .env.local -- drizzle-kit studio",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@sinclair/typebox": "^0.34.48",
		"dotenv": "^17.2.2",
		"drizzle-orm": "0.45.1",
		"drizzle-typebox": "^0.3.3",
		"elysia": "^1.4.22",
		"pg": "^8.16.3",
		"postgres": "^3.4.5",
		"slugify": "^1.6.6"
	},
	"devDependencies": {
		"@renovabit/biome-config": "^",
		"@renovabit/typescript-config": "*",
		"@types/node": "^22.18.6",
		"@types/pg": "^8.15.5",
		"dotenv-cli": "^8.0.0",
		"drizzle-kit": "^0.31.4",
		"typescript": "5.9.2"
	}
}
