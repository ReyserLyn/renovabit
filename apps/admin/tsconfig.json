{
	"extends": "@renovabit/typescript-config/base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "react-tanstarter"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "../api/src/*"],
      "@renovabit/api": ["../api/src/index.ts"],
      "@renovabit/api/*": ["../api/src/*"],
      "@renovabit/db": ["../../packages/db/index.ts"],
      "@renovabit/ui/*": ["../../packages/ui/src/*"],
      "@/modules/*": ["../api/src/modules/*"]
    },
    "strict": true
  }
}
